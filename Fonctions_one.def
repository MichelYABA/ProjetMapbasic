	sz_QueryName(8) = "IAIZoneDeCirculation"

	'sz_QueryName(9) = "NATIONAITE"

	'sz_QueryName(10) = "OBJET"


	i_Counter = 0

	redim sz_aQueryList(8)

	for i = 1 to 8
	
		i_Counter = i_Counter + 1

