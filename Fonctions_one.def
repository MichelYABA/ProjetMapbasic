'===========================================================================
'----------------------------------------------------
'Fonction de chargement d'une fenêtre d'ouverture de choix d'une table
'----------------------------------------------------

Sub OpenTable Dim NomFic As String

Dim filename As String
Dim i As Smallint
Dim valeur As Integer

OnError GoTo no_file

valeur = 0

'----------------------------------------------------
'Vérifie qu'il y'a au moins une table ouverte
'----------------------------------------------------
	If NumTables() > 0 Then


		'NomFic = FileOpenDlg("","","TAB","Ouvrir la Table")
		
		NomFic ="A:\A Etudier\FINAL2\IAISecteurs.TAB"
		
		'Vérifie que le fichier à bien
		'été renseigné et n'est pas vide
		If NomFic <> "" Then	
			
			'Récupère le nom de la table
			filename = PathToTableName$(NomFic)
			
			'Parcours l'ensemble des tables
			'ouvertes
			For i = 1 to NumTables()
				'Vérifie que le fichier est déjà ouvert
				If (filename = TableInfo(I,TAB_INFO_NAME)) Then
					valeur = 1
				End If
			Next		
			'if FileExists(NomFic) Then
				'valeur=1
			
			'Si le fichier n'est pas ouvert on l'ouvre
			If valeur = 0 Then

				Open Table NomFic As filename MAP From filename Position (0,0) Width 200 Height 100

			'Si le fichier est déjà ouvert on
			'lui renvoie un message lui
			'signifiant que le fichier est déjà
			'ouvert
			Else

				GoTo existe_files

			End If

		Else

			GoTo no_openfile
			
		End If
	
'----------------------------------------------------
'Vérifie qu'il n'y a aucune table ouverte
'----------------------------------------------------

	Else

		'NomFic = FileOpenDlg("","","TAB","Ouvrir la Table")
		
		NomFic ="A:\A Etudier\FINAL2\IAISecteurs.TAB"
		
		'Vérifie que le fichier à bien
		'été renseigné et n'est pas vide
		If NomFic <> "" Then	
			
			'Récupère le nom de la table
			filename = PathToTableName$(NomFic)
			
			'On ouvre le fichier
			Open Table NomFic As filename MAP From filename Position (0,0) Width 200 Height 100

		Else

			GoTo no_openfile
			
		End If

	End If

no_file:
	Exit Sub

no_openfile:
	Exit Sub

existe_files:
	Note "Le fichier est déjà ouvert"
	Exit Sub

End Sub

'===========================================================================
'----------------------------------------------------
'Fonction de superposition d'une couche sur une table
'----------------------------------------------------
Sub AddCouche Dim NomFic As String

Dim filename As String

OnError GoTo error_add

	If NumTables() > 0 And NumTables() = 1 Then
		
		filename = TableInfo(1,TAB_INFO_NAME)

		filename = filename

		'NomFic = FileOpenDlg("","","TAB","Ouvrir la Table")
		
		NomFic ="A:\A Etudier\FINAL2\DUBON_srv.WOR"
		
		'Vérifie que le fichier à bien
		'été renseigné et n'est pas vide
		If NomFic <> "" Then	
			
			'Récupère le nom de la table
			filename = PathToTableName$(NomFic)
			
			'On ouvre le fichier
			Open Table NomFic As filename
			
			'Ajout de la couche à la fenêtre
			'Map en cours d'execution
			Add Map Auto Layer filename
		
		'Si le fichier est vide
		Else

			GoTo no_openfile
			
		End If

	Else
	
		GoTo no_table

	End If

error_add:
	Exit Sub

no_openfile:
	Exit Sub

no_table:
	Exit Sub

End Sub