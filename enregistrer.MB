sub compacterligne
	if readcontrolvalue(1) then
		Pack table tableinfo(readcontrolvalue(1),TAB_INFO_NAME)
	end if
end sub

sub annulerModification
	if readcontrolvalue(1) then
		rollback table tableinfo(readcontrolvalue(1),TAB_INFO_NAME)
	end if
end sub

