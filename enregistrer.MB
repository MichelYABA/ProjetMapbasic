sub tabledone	
				Do Case tableinfo(readcontrolvalue(1),TAB_INFO_NAME)
					case "IAISecteurs"
							browse * from IAISecteurs
							Position (5,5) Units "cm" 
							width 10 Units "cm" 
							Height 10 Units "cm"	

					case "IAIJardin"
							browse * from IAIJardin
							Position (5,5) Units "cm" 
							width 10 Units "cm" 
							Height 10 Units "cm"
							
					case "AYO"
							browse * from AYO
							Position (5,5) Units "cm" 
							width 10 Units "cm" 
							Height 10 Units "cm"
							
					case "IAIArbres"
							browse * from IAIArbres
							Position (5,5) Units "cm" 
							width 10 Units "cm" 
							Height 10 Units "cm"
							
					case "IAIZoneDeCirculation"
							browse * from IAIZoneDeCirculation
							Position (5,5) Units "cm" 
							width 10 Units "cm" 
							Height 10 Units "cm"
							
					case "IAIPelouse"
							browse * from IAIPelouse
							Position (5,5) Units "cm" 
							width 10 Units "cm" 
							Height 10 Units "cm"
							
					case "IAIBatiments"
							browse * from IAIBatiments
							Position (5,5) Units "cm" 
							width 10 Units "cm" 
							Height 10 Units "cm"
							
					case "IAIContour"
							browse * from IAIContour
							Position (5,5) Units "cm" 
							width 10 Units "cm" 
							Height 10 Units "cm"
							
					case else
							Note "PAS DE DONNEES POUR CETTE TABLE"					
					end case		
end sub

