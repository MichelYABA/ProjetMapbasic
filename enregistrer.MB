include "mapbasic.def"

declare sub liste1
declare sub main
declare sub ajoutligne
declare sub liste2
declare sub enregistrer
declare sub MenuDonnées
declare sub MenuEnregistrer
declare sub liste3
declare sub annulerModification
declare sub liste4
declare sub compacterLigne
declare sub liste
declare sub tabledone

sub main
	call MenuDonnées
	call MenuEnregistrer
end sub

sub MenuEnregistrer
	create menu "Enregistrement" as
		"Enregistrer Table" calling liste2
	alter menu bar add "Enregistrement"
end sub

sub MenuDonnées
	create menu "Manipuler Données" as
		"Afficher/Modifier Données" as liste,
		"Ajout Ligne" calling liste1,
		"Annuler modifications" calling liste3,
		"Compacter Table" calling liste4
	alter menu bar add "Manipuler Données"
end sub

sub enregistrer
	if readcontrolvalue(1) then
		commit table tableinfo(readcontrolvalue(1),TAB_INFO_NAME)
	end if
end sub

sub liste1
	dim tablo() as string
	dim i as smallint
	'Vérification du nombre de tables ouvertes
	if numtables()=0 then
		note "Aucune table n'est ouverte"
	else
	'redimensionnement du tableau au nombre de tables ouvertes
		redim tablo (numtables())
		for i=1 to numtables()
			tablo(i)=tableinfo(i,TAB_INFO_NAME)	
		next
	'création d'un formulaire contenant une liste déroulante, un bouton Sélection 
	'et un bouton quitter
	dialog
		Control StaticText
		title "Veuillez choisir une table à afficher"
		Position 5,10
		control PopUpMenu
			position 9,22
			width 166
			id 1
			title from variable tablo
			value i
		'création bouton "Selection"
		control Okbutton
			title "Ajouter Ligne"
			position 40,42
			width 38
			height 14
			'id 5
			calling ajoutligne
		CONTROL CancelButton
			POSITION 113, 42
			WIDTH 38 
			HEIGHT 14
			TITLE "Quitter"	
	end if			
end sub

